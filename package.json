{
  "name": "node-typescript-express",
  "version": "1.0.0",
  "description": "A minimalist TypeScript-Express boilerplate",
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "boilerplate",
    "eslint"
  ],
  "author": "Shrujal Shah <shrujal@peerbits.com>",
  "main": "dist/index.js",
  "scripts": {
    "start": "pm2 start dist/server.js --name 'node-typescript-express'",
    "stop": "pm2 stop node-typescript-express",
    "restart": "pm2 restart node-typescript-express --update-env",
    "dev": "nodemon",
    "ts-node": "ts-node --transpile-only src/server.ts",
    "lint": "npm run eslint && npm run prettier",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint \"src/**/*.ts\"",
    "eslint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "build": "tsc",
    "build:prod": "tsc --sourceMap false",
    "test": "jest"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "pm2": "^4.5.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.9",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.22",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.8",
    "jest": "^25.5.4",
    "jest-express": "^1.12.0",
    "lint-staged": "^12.1.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.9"
  },
  "license": "MIT"
}
